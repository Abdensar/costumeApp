          "name": "Create Costume (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "New Costume",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Costume description",
                  "type": "text"
                },
                {
                  "key": "category_id",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "size",
                  "value": "M",
                  "type": "text"
                },
                {
                  "key": "price_per_day",
                  "value": "20.00",
                  "type": "text"
                },
                {
                  "key": "available",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "images[]",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/costumes",
              "host": ["{{base_url}}"],
              "path": ["costumes"]
            }
          }
        },
        {
          "name": "Update Costume (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Costume\",\n  \"description\": \"Updated description\",\n  \"category_id\": 1,\n  \"size\": \"L\",\n  \"price_per_day\": 25.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/costumes/1",
              "host": ["{{base_url}}"],
              "path": ["costumes", "1"]
            }
          }
        },
        {
          "name": "Delete Costume (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/costumes/1",
              "host": ["{{base_url}}"],
              "path": ["costumes", "1"]
            }
          }
        }
