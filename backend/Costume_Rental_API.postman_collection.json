            "method": "GET",
            "url": {
              "raw": "{{base_url}}/costumes?category=1&size=M&min_price=10&max_price=25&available=1",
              "host": ["{{base_url}}"],
              "path": ["costumes"],
              "query": [
                {
                  "key": "category",
                  "value": "1"
